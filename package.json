{
  "name": "@demiazz/fluxxor",
  "version": "2.0.3",
  "description": "Flux architecture tools for React",
  "license": "MIT",
  "homepage": "https://github.com/demiazz/fluxxor",
  "bugs": {
    "url": "https://github.com/demiazz/fluxxor/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/demiazz/fluxxor"
  },
  "author": {
    "name": "Alexey Plutalov",
    "email": "demiazz.py@gmail.com"
  },
  "keywords": [
    "react",
    "flux"
  ],
  "main": "lib/index.js",
  "module": "lib-es/index.js",
  "files": [
    "dist/*.js",
    "dist/*.map",
    "lib/*.js",
    "lib-es/*.js",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "test": "$(yarn bin)/jest",
    "test:watch": "$(yarn bin)/jest --watch",
    "test:ci": "$(yarn bin)/jest --coverage",
    "build": "$(yarn bin)/brandon build",
    "version": "yarn run build",
    "lint-staged": "$(yarn bin)/lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "test/**/*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "browserslist": [
    "last 3 Chrome major versions",
    "last 3 Firefox major versions",
    "last 3 Edge major versions",
    "last 2 Explorer major versions",
    "last 3 Safari major versions",
    "last 3 iOS major versions"
  ],
  "devDependencies": {
    "@demiazz/brandon": "2.2.1",
    "babel-jest": "21.2.0",
    "babel-preset-react": "6.24.1",
    "create-react-class": "15.6.2",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "7.4.0",
    "jest": "21.2.1",
    "prop-types": "15.6.0",
    "react": "16.0.0",
    "react-dom": "16.0.0"
  },
  "peerDependencies": {
    "prop-types": "^15.6.0"
  },
  "dependencies": {
    "eventemitter3": "2.0.3",
    "object-path": "0.11.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "jsx",
      "js"
    ],
    "testMatch": [
      "<rootDir>/test/**/*.test.js",
      "<rootDir>/test/**/*.test.jsx"
    ],
    "transform": {
      "^.+\\.js(x)?$": "<rootDir>/node_modules/babel-jest"
    },
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ]
  }
}
